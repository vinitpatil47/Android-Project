<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130sp"
        android:orientation="horizontal"
        android:layout_margin="5sp">

        <ImageView
            android:id="@+id/equi_pic"
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:layout_margin="5sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:textSize="16sp"
                android:textColor="@color/green"
                android:layout_gravity="right"/>

            <TextView
                android:id="@+id/equi_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="2sp"
                android:text="Tractor"
                android:textSize="25sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/provider_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Vinit Patil"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="5sp"
                android:textColor="#000"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:orientation="horizontal"
                android:layout_marginLeft="5sp">

                <ImageView
                    android:layout_width="18sp"
                    android:layout_height="20sp"
                    android:layout_marginTop="2sp"
                    app:srcCompat="@drawable/ic_attach_money_black_24dp"/>

                <TextView
                    android:id="@+id/equi_rent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2sp"
                    android:text="23000.00"
                    android:textColor="#000"
                    android:gravity="center_vertical|left"
                    android:textSize="16sp"/>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="134sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_marginBottom="5sp">

        <Button
            android:id="@+id/cancel_request"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="@color/red"
            android:text="Cancel Request"
            android:textColor="#FFF"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/approve_request"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/reject"
                android:layout_width="150sp"
                android:layout_height="50sp"
                android:background="@color/red"
                android:text="Deny Request"
                android:textColor="#FFF"
                android:textSize="16sp"
                android:visibility="visible"/>

            <Button
                android:id="@+id/accept"
                android:layout_width="150sp"
                android:layout_height="50sp"
                android:layout_alignParentRight="true"
                android:background="#0F0"
                android:text="Accept Request"
                android:textColor="#FFF"
                android:textSize="16sp"
                android:visibility="visible"/>

        </RelativeLayout>

    </LinearLayout>



</android.support.v7.widget.CardView>