<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RenterAcceptedFragment">

    <LinearLayout
        android:id="@+id/no_request_accepted"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:layout_gravity="center"
            android:layout_marginTop="50sp"
            android:background="@drawable/ic_info_outline_black_24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:gravity="center"
            android:text="Accepted Requests"
            android:layout_marginTop="25sp"
            android:layout_gravity="center"
            android:textColor="#000"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/text"
            android:layout_width="250sp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginTop="30sp"
            android:gravity="center"
            android:text="No Request Accepted  Currently"
            android:textSize="18sp" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/accepted_request"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"></android.support.v7.widget.RecyclerView>


</FrameLayout>